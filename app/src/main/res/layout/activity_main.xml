<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space1"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    tools:context="com.ford.zrouse.unfoundsound.MainActivity"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to UnfoundSound"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textSize="40sp"
        android:fontFamily="sans-serif-thin"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/album_image_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_album_black_24px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:text="Play your favorite albums!"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/release_image_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_new_releases_black_24px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:text="Find new music releases!"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/playlist_image_view"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_playlist_play_black_24px" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:text="Create and share playlists!"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginTop="70dp">

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-thin"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/login_button"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-thin"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>
